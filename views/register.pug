extends layout

block content
    #register.login-register-wrapper.wrapper.col-sm-12
        form.form-signin.col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4(method="POST", action="/register")
            h2.form-signin-heading PLEASE REGISTER
            |
            br
            input.form-control.my-form(type='email', name='email', placeholder='EMAIL', required='')
            |
            br
            input.form-control.my-form(type='text', name='username', placeholder='LOGIN', required='', autofocus='')
            |
            br
            input.form-control.my-form(type='password', name='password', placeholder='PASSWORD', required='')
            |
            br
            select.form-control.my-form(name='role')
                option(value="admin") ADMIN
                option(value="user") USER
            |
            br
            button#login-register-button.btn.btn-lg.btn-primary.btn-block.my-form(type='submit') REGISTER
