extends layout
block content
    #edit-product.login-register-wrapper.wrapper.col-sm-12
        form.form-signin.col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4(method="POST", action="/edit-product" enctype="multipart/form-data")
            h2.form-signin-heading EDIT PRODUCT
            |
            br
            input.form-control.my-form(type="file", name="productImage")
            |
            br
            input.form-control.my-form(type='text', name='name')
                #{product.name}
            |
            br
            textarea.form-control.my-form(type='text', name='description', rows="3")
                #{product.description}
            |
            br
            button#login-register-button.btn.btn-lg.btn-primary.btn-block.my-form(type='submit') EDIT